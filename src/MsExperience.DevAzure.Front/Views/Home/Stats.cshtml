
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>http://aka.ms/msxpdev</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3><span>Age moyen : </span><span id="avgAge" style="font-weight:600;">-</span> ans</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <h3>Genre</h3>
            <canvas id="gender-chart" height="100"></canvas>
        </div>
        <div class="col-sm-6">
            <h3>Emotions</h3>
            <canvas id="emotion-chart" height="100"></canvas>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <h3>Couleur des cheveux</h3>
            <canvas id="hair-chart" height="100"></canvas>
        </div>
    </div>
</div>
@section Scripts
    {
    <script src="~/js/site.js" asp-append-version="true"></script>
    <environment include="Development">
        <script src="~/lib/Chart.js/Chart.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/Chart.js/Chart.min.js" asp-append-version="true"></script>
    </environment>
}
